<%- include("layout/header.ejs"); %>
<style>
    .editLink {
        margin-right: 5px;
    }
</style>
<div class="main">
    <nav>
        <div class="nav-wrapper teal lighten-2">
            <div class="container">
                <ul id="nav-mobile" class="right">
                    <li><a href="/">На главную</a></li>
                    <li><a href="/auth/logout">Выйти</a></li>
                </ul>
            </div>
            
        </div>
    </nav>
    <div class="container">
        <section class="year">
            <div class="row">
                <!-- Заголовок страницы -->
                <div class="col s12 m12">
                    <h2 class="left-align">Список лет</h2>
                </div>
                <!-- end point -->

                <!-- Форма создания года -->
                <form name="createForm" class="col s12 m12">
                    <div class="row">
                        <div class="input-field col s12 m12">
                            <input name="year" type="number" min="2020" max="3000" class="validate">
                            <label for="year">Введите год</label>
                        </div>
                        <div class="submit-field col s12 m12">
                            <button id="submit" class="btn waves-effect waves-light" type="submit" name="action">Сохранить
                                <i class="material-icons right">send</i>
                            </button>
                            <button class="waves-effect waves-light btn" type="reset">Сбросить</button>
                        </div>
                    </div>
                </form>
                <!-- end point -->

                <!-- Таблица со списком лет -->
                <div class="col s12 m12">
                    <table id="tableYear" class="highlight">
                        <thead>
                          <tr>
                              <th>Id</th>
                              <th>Год</th>
                              <th>Операции</th>
                          </tr>
                        </thead>

                        <tbody>
                            <% for ( let iterator of docs ) { %>
                                <tr id="tr__<%= iterator._id %>">
                                    <td><%= iterator._id %></td>
                                    <td><%= iterator.year %></td>
                                    <td>
                                        <a onclick="editSelectYear('<%= iterator._id %>', '<%= iterator.year %>')" class="editLink waves-effect waves-light btn"><i class="small material-icons">edit</i></a>
                                        <a onclick="delSelectYear('<%= iterator._id %>')" class="removeLink waves-effect waves-light btn"><i class="small material-icons">delete</i></a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                      </table>
                </div>
                <!-- end point -->
            </div>
        </section>
    </div>
</div>

<script src="/javascripts/admin.min.js"></script>
<%- include("layout/footer.ejs"); %>